{
  "manifest_version": 3,

  "name": "NoPorno!",
  "version": "0.2",
  "description": "Meant to block all xxx sites whiches make your soul hell.",
  "author": "ut1s | github.com/ut1s",

  "content_scripts": [{
    "js": ["badsites.js", "goodsites.js", "noporno.js"],
    "matches": ["<all_urls>"],
    "run_at": "document_start"
  }],
  "action": {
    "default_popup": "popup.html"
  },
  "permissions":[
    "tabs"
  ]
}